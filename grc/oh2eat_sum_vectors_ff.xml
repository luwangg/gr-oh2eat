<?xml version="1.0"?>
<block>
  <name>Sum N vectors</name>
  <key>oh2eat_sum_vectors_ff</key>
  <category>[oh2eat]</category>
  <import>import oh2eat</import>
  <make>oh2eat.sum_vectors_ff($vecsize, $decimation, $scale)</make>

  <param>
    <name>Vec Length</name>
    <key>vecsize</key>
    <value>2</value>
    <type>int</type>
  </param>

  <param>
    <name>Decimation</name>
    <key>decimation</key>
    <value>2</value>
    <type>int</type>
  </param>

  <param>
    <name>Scaling</name>
    <key>scale</key>
    <value>1</value>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
    <vlen>$vecsize</vlen>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
    <vlen>$vecsize</vlen>
  </source>
</block>
